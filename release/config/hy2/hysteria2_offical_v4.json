{
  "log": {
    "loglevel": "debug"
  },
  "inbounds": [{
    "port": 1080,
    "listen": "127.0.0.1",
    "tag": "http",
    "protocol": "http"
  }, {
    "port": 1443,
    "listen": "127.0.0.1",
    "tag": "hy2_in",
    "protocol": "hysteria2",
    "streamSettings": {
      "network": "hysteria2",
      "security": "tls",
      "hy2Settings": {
        "password": "your-password"
      }
    }
  }],
  "outbounds": [{
    "protocol": "freedom",
    "tag": "direct"
  }, {
    "tag": "hy2_out",
    "protocol": "hysteria2",
    "settings": {
      "servers": [{
        "address": "127.0.0.1",
        "port": 1443
      }]
    },
    "streamSettings": {
      "network": "hysteria2",
      "security": "tls",
      "tlsSettings": {
        "allowInsecure": true
      },
      "hy2Settings": {
        "password": "your-password"
      }
    }
  }],
  "routing": {
    "rules": [{
        "type": "field",
        "outboundTag": "direct",
        "inboundTag": ["hy2_in"]
      },
      {
        "type": "field",
        "outboundTag": "hy2_out",
        "inboundTag": ["http"]
      }
    ]
  }
}
